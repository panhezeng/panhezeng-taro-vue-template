{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "src/*": ["src/*"],
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom"]
  },
  "include": ["src*/**/*.js", "src*/**/*.jsx", "src*/**/*.vue"],
  "exclude": ["dist/**/*", "node_modules"]
}
